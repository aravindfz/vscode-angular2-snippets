{
  "ngClass": {
    "prefix": "a-ngClass",
    "body": [
      "[ngClass]=\"{${cssClass}: ${expression}}\""
    ],
    "description": "Angular 2 ngClass snippet"
  },
  "ngFor": {
    "prefix": "a-ngFor",
    "body": [
      "*ngFor=\"let ${item} of ${list}\""
    ],
    "description": "Angular 2 *ngFor snippet"
  },
  "ngIf": {
    "prefix": "a-ngIf",
    "body": [
      "*ngIf=\"${expression}\""
    ],
    "description": "Angular 2 *ngIf snippet"
  },
  "ngModel": {
    "prefix": "a-ngModel",
    "body": [
      "[(ngModel)]=\"${binding}\""
    ],
    "description": "Angular 2 ngModel snippet"
  },
  "ngRouterLink": {
    "prefix": "a-routerLink",
    "body": [
      "[routerLink]=\"['/${routeName}']\""
    ],
    "description": "Angular 2 routerLink snippet"
  },
  "ngStyle": {
    "prefix": "a-ngStyle",
    "body": [
      "[ngStyle]=\"{${style}: ${expression}}\""
    ],
    "description": "Angular 2 ngStyle snippet"
  },
  "ngSwitch": {
    "prefix": "a-ngSwitch",
    "body": [
      "<div [ngSwitch]=\"${conditionExpression}\">",
      "\t<div *ngSwitchCase=\"${expression}\">${output}</div>",
      "\t<div *ngSwitchDefault>${output2}</div>",
      "</div>"
    ],
    "description": "Angular 2 ngSwitch snippet"
  },
  "pre w/ json": {
    "prefix": "a-prej",
    "body": [
      "<pre>{{$1 | json}}</pre>$2"
    ],
    "description": "Angular 2 pre debug | json"
  },
  "pre w/ async json": {
    "prefix": "a-preja",
    "body": [
      "<pre>{{$1 | async | json}}</pre>$2"
    ],
    "description": "Angular 2 pre debug | async | json"
  }
}
